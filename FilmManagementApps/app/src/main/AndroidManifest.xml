<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arief.filmmanagementapps"
    >
    <uses-permission android:name="android.permission.INTERNET"/>


    <application

        android:allowBackup="true"
        android:icon="@mipmap/film_management_round"
        android:label="Film Manager"
        android:roundIcon="@mipmap/film_management_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FilmManagementApps">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5269097273031627~7933835269"/>
        ca-app-pub-5269097273031627~7933835269
        <activity
            android:name="com.arief.filmmanagementapps.ui.splash.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FilmManagementApps.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FilmManagementApps.NoActionBar">
        </activity>
        <activity android:name="com.arief.filmmanagementapps.activity.ActivityUpdate" android:exported="true">
            <intent-filter>
                <action android:name="com.arief.filmmanagementapps.ActivityUpdate"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name="com.arief.filmmanagementapps.activity.LoginActivity" android:exported="true">
            <intent-filter>
                <action android:name="com.arief.filmmanagementapps.LoginActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
        <activity android:name="com.arief.filmmanagementapps.activity.RegisterActivity" android:exported="true">
            <intent-filter>
                <action android:name="com.arief.filmmanagementapps.RegisterActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
        <activity android:name="com.arief.filmmanagementapps.activity.ListDataGuest" android:exported="true">
            <intent-filter>
                <action android:name="com.arief.filmmanagementapps.RegisterActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>

    </application>

</manifest>